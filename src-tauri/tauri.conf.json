{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "sider-screenshot",
  "version": "0.1.0",
  "identifier": "com.sider-screenshot.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sider",
        "width": 800,
        "height": 600
      },
      {
        "title": "sider-screenshot",
        "label": "screenshot",
        "fullscreen": true,
        "url": "/screenshot",
        "visible": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
