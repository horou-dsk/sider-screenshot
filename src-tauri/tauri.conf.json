{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sider",
  "version": "0.1.0",
  "identifier": "com.sider-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sider",
        "url": "/sider",
        "width": 800,
        "height": 600,
        "devtools": true
      },
      {
        "title": "sider-screenshot",
        "label": "screenshot",
        "fullscreen": true,
        "url": "/sider/screenshot",
        "visible": false,
        "skipTaskbar": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
