{
  "$schema": "https://schema.tauri.app/config/2",
  "identifier": "com.sider-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "sider",
        "url": "/",
        "width": 800,
        "height": 600,
        "devtools": true,
        "transparent": true
      },
      {
        "title": "sider-screenshot",
        "label": "screenshot",
        "url": "/screenshot",
        "visible": false,
        "skipTaskbar": true,
        "transparent": true,
        "alwaysOnTop": true
      },
      {
        "title": "quick-search",
        "label": "quick-search",
        "url": "/quick-start",
        "visible": false,
        "skipTaskbar": true,
        "width": 800,
        "height": 60,
        "decorations": false,
        "resizable": false
      }
    ]
  }
}
